<p class="message"><%= notice %></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th class="head">Title</th>
      <th class="head">Body</th>
      <th colspan ="3" class="head"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th class="show"><%= book.title %></th>
      <th class="show"><%= book.body %></th>
      <th class="show"><%= link_to "Show", book_path(book.id) %></th>
      <th class="show"><%= link_to "Edit", edit_book_path(book.id) %></th>
      <th class="show"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></th>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
  <% if @book.errors.any? %>
    <div class="alert">
      <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="submit"><%= f.submit 'Create Book' %></div>
<% end %>